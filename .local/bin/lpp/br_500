#!/bin/sh



screen=$(printf "brightest\\nbright\\ndark\\ndarker\\ndarkerer\\ndarkest\\ncustom" | dmenu -i -p "Brightness and Redshift")
declare -i prnt=1


case $screen in
	"brightest")
		declare -i red=6500
		declare -i bright=2408475
		;;
	"bright")
		declare -i red=6500
		declare -i bright=1312855
		;;
	"dark")
		declare -i red=3300
		declare -i bright=689485
		;;
	"darker")
		declare -i red=3000
		declare -i bright=595035
		;;

	"darkerer")
		declare -i red=2600
		declare -i bright=481695
		;;
	"darkest")
		declare -i red=1900
		declare -i bright=217235

		;;
	"custom")
		echo -n "suggested range[1500-6500] | input redshift "
		read red
		echo -n "suggested range[20000-120000] | input bright "
		read bright
		;;

	*)
		echo -n $help
		prnt=0
		;;
esac



if [[ prnt -gt 0 ]]
then

redshift -x
redshift -O $red
sudo echo $bright > /sys/class/backlight/intel_backlight/brightness


echo "set $screen | redshift $red | brightness $bright"

fi
